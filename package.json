{
    "name":"webdev-portfolio",
    "version":"1.0.0",
    "main":"script.js",
    "scripts": {
        "format": "prettier --write \"**/*.{html,css,js}\"",
        "lint": "eslint .",

        "clean": "rm -rf dist",

        "build:js": "terser src/js/script.js -o dist/js/script.min.js -c -m",
        "build:css": "cleancss -o dist/css/styles.min.css src/css/styles.css",
        "build:html": "cp src/index.html dist/index.html",
        "build:assets": "cp -r src/assets dist/assets",

        "build": "npm run clean && mkdir -p dist/js dist/css && npm run build:js && npm run build:css && npm run build:html"
    },
    "keywords":[],
    "author":"",
    "license":"ISC",
    "description":"",
    "devDependencies": {
        "@eslint/js":"^9.35.0",
        "clean-css-cli":"^5.6.3",
        "eslint":"^9.35.0",
        "globals":"^16.4.0",
        "prettier":"^3.6.2"
    },
    "dependencies": {
        "terser":"^5.46.0"
    }
}